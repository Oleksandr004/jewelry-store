{
	"files": [],
	"references": [
		{ "path": "./tsconfig.app.json" },
		{ "path": "./tsconfig.node.json" }
	],
	"compilerOptions": {
		"types": ["node"],
		"baseUrl": "src",
		"paths": {
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@utils/*": ["src/utils/*"],
			"@assets/*": ["assets/*"],
			"@layout/*": ["src/layout/*"],
			"@widgets/*": ["widgets/*"],
			"@styles/*": ["styles/*"],
			"@sections/*": ["sections/*"],
			"@types/*": ["types/*"],
			"@api/*": ["api/*"],
			"@hooks/*": ["hooks/*"]
		}
	}
}
